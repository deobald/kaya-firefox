{
  "manifest_version": 2,
  "name": "Save Button",
  "version": "0.1.4",
  "description": "Save bookmarks, quotes, and images with Save Button",
  "author": "deobald.ca",
  "homepage_url": "https://savebutton.com",

  "browser_specific_settings": {
    "gecko": {
      "id": "org.savebutton@savebutton.org",
      "strict_min_version": "91.0",
      "data_collection_permissions": {
        "required": ["none"],
        "optional": []
      }
    }
  },

  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus",
    "nativeMessaging",
    "storage",
    "notifications"
  ],

  "icons": {
    "48": "icons/icon-48.svg",
    "96": "icons/icon-96.svg"
  },

  "browser_action": {
    "default_icon": {
      "48": "icons/icon-grey-48.svg",
      "96": "icons/icon-grey-96.svg"
    },
    "default_title": "Add to Save Button",
    "default_popup": "popup/popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  }
}
